<div class="row ml-0 mt-3" id="div-principal-text">
  <div>
    <h1>Editing Organization</h1>
    <p>In this part you can modified the information about the organization.
    </p>
  </div>
</div>

<div class="card mb-3" id="first-div-particular-event">
  <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
  <div class="card-body">
    <%= form_with model: @organization do |form| %>
      <div class="form-group" id="text-div-blue">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group" id="text-div-blue">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Edit", class: ["btn", "btn-primary"] %>
        <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
      </div>
    <% end %>
  </div>
</div>
