<h1>Editing Event</h1>
<div class="card mb-3" id="first-div-particular-event">
  <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
  <div class="card-body">
    <%= form_with model: @event do |form| %>
      <div class="form-group" id="text-div-blue">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group" id="text-div-blue">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control" %>
      </div>
      <div class="form-group" id="text-div-blue">
        <%= form.label :user_id %>
        <%= form.text_field :user_id %>
      </div>
      <div class="" id="text-div-blue">
        <p class="card-text" id="text-div-blue"><%= "Name:"%><%= @events.user.profile.name %></p>
      </div>
      <div class="" id="text-div-blue">
        <p class="card-text" id="text-div-blue"><%= "Last Name:"%><%= @events.user.profile.last_name  %></p>
        <br>
      </div>
      <div class="form-group" id="text-div-blue">
        <%= form.label :location %>
        <%= form.text_field :location %>
      </div>
      <div class="form-group" id="text-div-blue">
        <%= form.label :date %>
        <%= form.datetime_local_field :date %>
      </div>

      <div class="form-group">
        <%= form.submit "Edit", class: ["btn", "btn-primary"] %>
        <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
