<p id="notice"><%= notice %></p>
<link rel="stylesheet" type="text/css" href="event_id_view.css">

<div class="row" id="event-show-div-1">
  <div class="col-lg-6">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <h1>Event: <%= @events.title %></h1>
        <p>Event date: <%= @events.date  %></p>
        <p>Description: <br>  <%= @events.description %></p>
      </li>
      <li class="list-group-item">
        <h2>Location: <%= @events.location  %></h2>
        <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
      </li>
      <li class="list-group-item">
        <h2>Attached Files</h2>
        <p>Inster a pdf</p>
      </li>
      <li class="list-group-item">
        <h2>Images:</h2>
        <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
      </li>
    </ul>
  </div>

  <div class="col-lg-6">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <h2>Created by: <%= @events.user.profile.name %> <%= @events.user.profile.last_name  %></h2>
        <h2>Created on: <%= @events.created_at %></h2>
      </li>
      <li class="list-group-item">
        <div class="card" id="div-event-list-user">
          <h2>Participant list:</h2>
          <td><button class="btn btn-primary" id="add_button_event">Add</button></td>
          <div class="card-body">
            <div id="profile-scroll">
              <table class="table table-striped table-dark">
                <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Last Name</th>
                </tr>
                </thead>
                <tbody>
                <% @event_list_user.each do |event_list| %>
                  <tr>
                    <td><%= event_list.user.profile.name %></td>
                    <td><%= event_list.user.profile.last_name %></td>
                    <td><button class="btn btn-primary">Edit</button></td>
                    <td><button class="btn btn-primary" id="delete_button_event">Delete</button></td>
                  </tr>
                <%end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <h2>Videos:</h2>
        <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
      </li>
      <li class="list-group-item">
        <h3>Options for the event:</h3>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit",  edit_event_path(@events) %></button>
            <button class="btn btn-primary" id="delete_button_event">Delete</button>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>


<div class="row" id="event-show-div-2">
  <div class="col-lg-12">
    <div class="card" id="div-comments-event">
      <h2>Comments</h2>
      <td><button class="btn btn-primary" id="add_button_event">Add</button></td>
      <div class="card-body">
        <% @event_comments.each do |comment| %>
          <p class="card-text"><%= comment.text_comment %></p>
          <button class="btn btn-primary">Edit</button>
          <button class="btn btn-danger"><%=link_to "Delete", {controller: 'comments', action: 'destroy'}, method: :delete %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row" id="event-show-div-3">
  <h6>.</h6>
</div>

<div class="row" id="event-show-div-4">
  <div class="btn-group">
    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "back", events_path %></button>
  </div>
</div>

