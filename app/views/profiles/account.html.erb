<p id="notice"><%= notice %></p>

<div class="row" id="profile-view">
  <div class="card">
    <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
    <div class="card-body">
      <p class="card-text" id="text-div-black"><%= @profile.name %></p>
      <p class="card-text" id="text-div-black"><%= @profile.last_name %></p>
      <p class="card-text" id="text-div-black"><%= @profile.dob %></p>
      <p class="card-text" id="text-div-black"><%= @profile.phone %></p>
      <p class="card-text" id="text-div-black"><%= @profile.address %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_profile_path(@profile) %></button>
        </div>
      </div>
    </div>
  </div>

  <div class="card" id="black-text">
    <div class="card-body">
      <h5 class="card-title">Events invited</h5>
      <p>Events to which the user has been invited</p>
      <div id="profile-scroll">
        <table class="table table-striped table-dark">
          <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Title</th>
          </tr>
          </thead>
          <tbody>
          <% i=0 %>
          <% @event_user_invited.each do |event_user_invited| %>
            <tr>
              <td><%= i+=1 %></td>
              <td><%= event_user_invited.event.title %></td>
              <td><button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View",  event_path(event_user_invited.event.id) %></button></td></td>
            </tr>
          <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card" id="black-text">
    <div class="card-body">
      <h5 class="card-title">Created Events</h5>
      <p> The following list show the created events by this profile</p>
      <div id="profile-scroll">
        <table class="table table-striped table-dark">
          <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Title</th>
            <th></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% i=0 %>
          <% @created_events.each do |event_user_invited| %>
            <tr>
              <td><%= i+=1 %></td>
              <td><%= event_user_invited.title %></td>
              <td><button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit",  edit_event_path(event_user_invited.id) %></button></td>
              <td><button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View",  event_path(event_user_invited.id) %></button></td></td>
            </tr>
          <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



